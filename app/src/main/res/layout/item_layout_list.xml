<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="song"
            type="com.example.hippoplayer.models.Song" />

        <variable
            name="buttonEvents"
            type="com.example.hippoplayer.list.events.ItemEvent" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_item_list"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@android:color/white"
        android:scaleX="0.95"
        android:scaleY="0.95"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:load_background_color="@{song.thumbnail}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_item_artist_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_avatar_artist"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:load_image_list="@{song.avatarArtist}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/image_avatar_artist"
                    android:paddingLeft="5dp"
                    android:text="@{song.nameArtist}"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_title_song_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_description_song_list"
                android:layout_below="@+id/header_item_artist_list"
                android:gravity="center"
                android:text="@{song.nameSong}"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_description_song_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/image_song_list"
                android:gravity="center"
                android:text="@{song.description}"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/image_song_list"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                app:load_image_list="@{song.thumbnail}" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/button_play_and_pause"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/image_song_list"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_circle_background"
                android:elevation="15dp"
                android:onClick="@{buttonEvents::buttonPlayItemList}"
                android:scaleType="centerCrop"
                app:lottie_fileName="pause.json"
                app:lottie_loop="false" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>