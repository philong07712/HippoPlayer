<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="song"
            type="com.example.hippoplayer.models.Song" />

    </data>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:scaleType="centerCrop"
            app:load_image_list="@{song.thumbnail}"
            android:id="@+id/image_song_list"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:textColor="@android:color/white"
                android:text="@{song.nameSong}"
                android:id="@+id/text_title_song_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@android:color/white"
                android:text="@{song.nameArtist}"
                android:id="@+id/text_artist_song_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</layout>